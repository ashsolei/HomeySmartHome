          {
            "name": "system_name",
            "type": "string",
            "title": { "en": "System name", "sv": "Systemnamn" }
          },
          {
            "name": "message",
            "type": "string",
            "title": { "en": "Message", "sv": "Meddelande" }
          }
        ]
      },
      {
        "id": "memory-pressure-detected",
