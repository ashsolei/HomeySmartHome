          },
          {
            "name": "object_type",
            "type": "string",
            "title": { "en": "Object type", "sv": "Objekttyp" }
          },
          {
            "name": "confidence",
            "type": "number",
            "title": { "en": "Confidence (%)", "sv": "Säkerhet (%)" }
          }
        ]
      },
      {
