        "tokens": [
          {
            "name": "device",
            "type": "string",
            "title": { "en": "Device", "sv": "Enhet" }
          },
          {
            "name": "urgency",
            "type": "string",
            "title": { "en": "Urgency", "sv": "Brådskande" }
          },
          {
            "name": "days_until_failure",
            "type": "number",
            "title": { "en": "Days until failure", "sv": "Dagar till fel" }
          },
          {
            "name": "probability",
            "type": "number",
            "title": { "en": "Probability (%)", "sv": "Sannolikhet (%)" }
          }
        ]
      },
      {
        "id": "ai-presence-predicted",
