          },
          {
            "name": "reason",
            "type": "string",
            "title": { "en": "Reason", "sv": "Anledning" }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "is-anyone-home",
        "title": {
          "en": "Someone is home",
          "sv": "Någon är hemma"
        }
      },
      {
        "id": "is-night-mode",
        "title": {
          "en": "Night mode is active",
          "sv": "Nattläge är aktivt"
        }
      },
      {
        "id": "is-energy-saving",
        "title": {
          "en": "Energy saving mode is active",
          "sv": "Energisparläge är aktivt"
        }
      },
      {
        "id": "temperature-in-range",
        "title": {
          "en": "Temperature is in range",
          "sv": "Temperaturen är inom intervall"
        },
        "args": [
          {
            "name": "zone",
            "type": "autocomplete",
            "placeholder": { "en": "Select zone", "sv": "Välj zon" }
          },
          {
            "name": "min",
            "type": "number",
            "min": -40,
            "max": 60
          },
          {
            "name": "max",
            "type": "number",
            "min": -40,
            "max": 60
          }
        ]
      },
      {
        "id": "is-scene-active",
        "title": {
          "en": "Scene is active",
          "sv": "Scen är aktiv"
        },
        "args": [
          {
            "name": "scene",
            "type": "autocomplete",
            "placeholder": { "en": "Select scene", "sv": "Välj scen" }
          }
        ]
      },
      {
        "id": "prediction-confidence-above",
        "title": {
          "en": "AI prediction confidence is above",
          "sv": "AI-förutsägelsesäkerhet är över"
        },
        "args": [
          {
            "name": "model",
            "type": "dropdown",
            "values": [
              { "id": "energy", "label": { "en": "Energy usage", "sv": "Energianvändning" } },
              { "id": "presence", "label": { "en": "Presence", "sv": "Närvaro" } },
              { "id": "failure", "label": { "en": "Device failure", "sv": "Enhetsfel" } },
              { "id": "comfort", "label": { "en": "Comfort", "sv": "Komfort" } }
            ]
          },
          {
            "name": "threshold",
            "type": "range",
            "min": 0,
            "max": 100,
            "step": 5,
            "label": "%"
          }
        ]
      },
      {
        "id": "model-accuracy-above",
        "title": {
          "en": "ML model accuracy is above",
          "sv": "ML-modellnoggrannhet är över"
        },
        "args": [
          {
            "name": "model",
            "type": "dropdown",
            "values": [
              { "id": "energy-usage", "label": { "en": "Energy usage", "sv": "Energianvändning" } },
              { "id": "presence-pattern", "label": { "en": "Presence pattern", "sv": "Närvaromönster" } },
              { "id": "device-failure", "label": { "en": "Device failure", "sv": "Enhetsfel" } },
              { "id": "comfort-preferences", "label": { "en": "Comfort preferences", "sv": "Komfortpreferenser" } }
            ]
          },
          {
            "name": "accuracy",
            "type": "range",
            "min": 0,
            "max": 100,
            "step": 5,
            "label": "%"
          }
