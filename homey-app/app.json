        "tokens": [
          {
            "name": "command",
            "type": "string",
            "title": { "en": "Command", "sv": "Kommando" }
          },
          {
            "name": "intent",
            "type": "string",
            "title": { "en": "Intent", "sv": "Avsikt" }
          },
          {
            "name": "confidence",
            "type": "number",
            "title": { "en": "Confidence (%)", "sv": "Säkerhet (%)" }
          }
        ]
      },
      {
        "id": "nlp-automation-created",
