{
  "name": "com.smarthomepro.dashboard",
  "version": "3.3.0",
  "description": "Smart Home Pro - Advanced Dashboard & Automation for Homey (97+ modules, 16 waves)",
  "main": "app.js",
  "scripts": {
    "build": "echo 'No build required'",
    "start": "node server.js",
    "start:dev": "NODE_ENV=development node server.js",
    "lint": "eslint .",
    "test": "node --test --test-force-exit test/*.test.js",
    "test:integration": "node test-suite.js",
    "docker:build": "docker build -t smarthomepro:latest .",
    "docker:run": "docker run -p 3000:3000 --name smarthomepro smarthomepro:latest",
    "docker:up": "docker compose up -d",
    "docker:up:dev": "docker compose --profile dev up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f smarthomepro",
    "docker:full": "docker compose -f ../docker-compose.yml up -d --build",
    "docker:health": "curl -s http://localhost:3000/health | node -e \"process.stdin.on('data',d=>console.log(JSON.parse(d)))\""
  },
  "dependencies": {
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "homey": "file:./lib/standalone/homey-shim-pkg",
    "ioredis": "^5.10.0",
    "pino": "^10.3.1",
    "rate-limit-redis": "^4.3.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "eslint": "^10.0.0",
    "pino-pretty": "^13.1.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
