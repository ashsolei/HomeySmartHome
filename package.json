{
  "name": "smarthomepro",
  "version": "3.3.0",
  "private": true,
  "description": "Smart Home Pro \u2014 Full-stack smart home platform with 118 backend systems, 66 dashboard modules, AI-driven automation",
  "scripts": {
    "deploy": "./deploy.sh start",
    "deploy:stop": "./deploy.sh stop",
    "deploy:restart": "./deploy.sh restart",
    "deploy:status": "./deploy.sh status",
    "deploy:logs": "./deploy.sh logs",
    "deploy:test": "./deploy.sh test",
    "deploy:clean": "./deploy.sh clean",
    "test:backend": "cd homey-app && npm test",
    "test:dashboard": "cd web-dashboard && npm test",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:all": "npm run test:backend && npm run test:dashboard && npm run test:e2e",
    "lint:backend": "cd homey-app && npm run lint",
    "lint:dashboard": "cd web-dashboard && npm run lint",
    "lint:all": "npm run lint:backend && npm run lint:dashboard",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps",
    "create-module": "node tools/create-module.js",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ashsolei/HomeySmartHome.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3"
  },
  "lint-staged": {
    "homey-app/**/*.js": [
      "eslint --fix"
    ],
    "web-dashboard/**/*.js": [
      "eslint --fix"
    ]
  }
}
