{
  "name": "homey-smart-home-dashboard",
  "version": "3.1.0",
  "description": "Homey Smart Home Dashboard - 66+ moduler, AI-driven automation",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-suite.js",
    "test:watch": "nodemon --exec 'node test-suite.js'",
    "lint": "eslint .",
    "modules": "ls -1 *.js | wc -l && echo 'moduler installerade'",
    "docs": "open ../README.md",
    "docker:build": "docker build -t smarthome-dashboard .",
    "docker:run": "docker run -p 3001:3001 --name smarthome-dashboard smarthome-dashboard"
  },
  "keywords": [
    "homey",
    "smart-home",
    "automation",
    "ai",
    "energy",
    "dashboard"
  ],
  "author": "Smart Home Pro Team",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "helmet": "^8.0.0",
    "compression": "^1.7.5"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "nodemon": "^3.1.9"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
