# Smart Home Pro â€” Environment Variables
# Copy this file to .env and fill in values

# Authentication
HOMEY_TOKEN=           # Homey API authentication token
JWT_SECRET=            # Secret for JWT signing (dashboard auth)

# Timezone & Location
TZ=Europe/Stockholm
LATITUDE=59.3293
LONGITUDE=18.0686

# Logging
LOG_LEVEL=info         # debug, info, warn, error

# Ports (defaults shown)
# PORT=3000            # Backend API port
# DASHBOARD_PORT=3001  # Dashboard port
# NGINX_PORT=80        # Nginx reverse proxy port

# Rate Limiting
ENABLE_RATE_LIMITING=true

# CORS
ALLOWED_ORIGINS=http://localhost,http://localhost:3001

# Docker Compose Dev
# GRAFANA_PASSWORD=    # Required for dev stack
# REDIS_PASSWORD=      # Optional, defaults to smarthome-dev-redis
